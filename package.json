{
  "private": true,
  "name": "jsxtreme-markdown",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "test-jest": "jest",
    "format": "prettier --single-quote --write '**/!(node_modules|dist)/**/*.js'",
    "postinstall": "lerna bootstrap",
    "precommit": "lint-staged",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "devDependencies": {
    "eslint": "^4.3.0",
    "eslint-plugin-node": "^5.1.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lerna": "^2.0.0",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3"
  },
  "engines": {
    "node": ">=4"
  },
  "jest": {
    "coverageReporters": [
      "text",
      "html"
    ],
    "roots": [
      "<rootDir>/packages"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "clearMocks": true
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  }
}
